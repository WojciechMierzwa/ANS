#include <stdio.h>
#include <ctype.h>

double x, y;

int main() {
	

     
	while(scanf("%lf", &x)!=1)
	{
		printf("Zly symbol, Podaj y: \n");
		fflush(stdin);
	}
		while(scanf("%lf", &y)!=1)
	{
		printf("Zly symbol, Podaj y: \n");
		fflush(stdin);
	}
	
	printf("Suma wynosi: %lf", x+y);

	


	return 0;
	
}
